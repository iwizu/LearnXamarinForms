<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Layouts.LayoutsMenu">
    <StackLayout>
        <Label Text="Layouts Menu" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <Button Text="StackLayout" Clicked="Button_Clicked"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="AbsoluteLayout" Clicked="Button_Clicked_1"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="RelativeLayout" Clicked="Button_Clicked_2"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="GridLayout" Clicked="Button_Clicked_3"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="ContentView" Clicked="Button_Clicked_4"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="ScrollView" Clicked="Button_Clicked_5"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
        <Button Text="Frame" Clicked="Button_Clicked_6"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand" />
    </StackLayout>
</ContentPage>